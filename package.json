{
  "name": "instant-range",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build.ts",
    "build:release": "bun build.ts --release",
    "watch": "bun build ./src/instant-range.ts --outdir ./dist --target browser --format esm --sourcemap=linked --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  }
}
